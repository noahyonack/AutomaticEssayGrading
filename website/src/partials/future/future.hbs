<section class="future" id="future">
	{{#with future}}
		<div class="container">
			<h2 class="title">{{this.title}}</h2>
			{{#each this.paragraphs}}
				<p class="explanation">{{{this.text}}}</p>
				{{#if this.image}}
					<img class="illustration" src={{this.image}} />
				{{/if}}
			{{/each}}
		</div>
	{{/with}}
</section>
